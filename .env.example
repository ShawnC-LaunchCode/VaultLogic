# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Environment
NODE_ENV=development
PORT=5000

# Base URLs
BASE_URL=http://localhost:5000
VITE_BASE_URL=http://localhost:5000

# Database (PostgreSQL - Neon recommended)
DATABASE_URL=postgresql://user:password@host:5432/database

# Google OAuth (Get from Google Cloud Console)
# Note: You need TWO client IDs - one for server, one for client
GOOGLE_CLIENT_ID=YOUR_SERVER_CLIENT_ID.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_ID=YOUR_CLIENT_WEB_CLIENT_ID.apps.googleusercontent.com

# Session & Authentication
SESSION_SECRET=your-super-secret-session-key-min-32-chars
JWT_SECRET=your-jwt-secret-min-32-chars-for-local-auth
JWT_EXPIRY=7d

# Feature Flags (Defaults to false if not set, set to true to enable)
VITE_ENABLE_BLOCKS_V2=true
VITE_ENABLE_SCRIPTING_V1=true
VITE_ENABLE_VALIDATION_V2=true
VITE_ENABLE_VERSIONING=true
VITE_ENABLE_ANALYTICS_V1=true
VITE_ENABLE_COLLAB_V1=true
VITE_ENABLE_PREVIEW_HOT_RELOAD=true
VITE_ENABLE_AUTO_TEST_RUNNER=true

# Observability
LOG_LEVEL=info

# CORS (comma-separated list of allowed origins - hostnames only, no protocols)
ALLOWED_ORIGIN=localhost,127.0.0.1

# Secrets Management (REQUIRED for Stage 9+ - HTTP/API integrations)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
VL_MASTER_KEY=your-base64-encoded-32-byte-master-key-REQUIRED

# Email (Optional - for SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AI Services (Optional)
GEMINI_API_KEY=your-google-gemini-api-key-here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# AI Workflow Generation
# Provider: 'openai' or 'anthropic'
AI_PROVIDER=openai
AI_API_KEY=your-openai-or-anthropic-api-key-here
AI_MODEL_WORKFLOW=gpt-4-turbo-preview
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
